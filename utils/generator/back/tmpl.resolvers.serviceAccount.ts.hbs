{{#if (eq type 'usedBy')}}
        {{type}}{{targetShort}}: async (sa, args: object) => {
            const lst = await list{{targetShort}}.{{targetGroup}}{{targetShort}}(sa, {namespace: sa['metadata']['namespace'], ...args})
            return lst.filter(pod=>pod['spec']['serviceAccountName']==sa['metadata']['name'] || pod['spec']['serviceAccount']==sa['metadata']['name'])
        },
{{/if}}
