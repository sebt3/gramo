query {{ name }}Query($namespace: queryParameters{{#each objects}}{{#unless (isNamespace group short)}}, ${{ group }}In{{ short }}: queryParameters{{/unless}}{{/each}}) {
  k8sNamespace(params: $namespace) {
    metadata {
      name
{{#each objects}}
  {{#if (and (isNamespace group short) ../detailed)}}
      annotations
      labels
      creationTimestamp
      ownerReferences {
        apiVersion
        blockOwnerDeletion
        controller
        kind
        name
        uid
      }
      uid
  {{/if}}
{{/each}}
    }
{{#each objects}}
  {{#if (isNamespace group short)}}
    spec
    status
  {{/if}}
  {{#if namespaced}}
    {{ group }}{{ short }}(params: ${{ group }}In{{ short }}) {
      metadata {
        name
        namespace
    {{#if ../detailed}}
        annotations
        labels
        creationTimestamp
        ownerReferences {
          apiVersion
          blockOwnerDeletion
          controller
          kind
          name
          uid
        }
        uid
    {{/if}}
      }
    {{#each readProperties}}
      {{this}}
    {{/each}}
    {{#if ../detailed}}
      {{#each resolvers}}
        {{#unless (containShort ../../objects resultShort) }}
      {{name}} {
        {{#if (or (and (eq group 'vynil') (or (eq resultShort 'Package') (eq resultShort 'Category'))) (eq resultGroup 'core') )}}
    {{#if (or (eq group 'vynil') (eq resultGroup 'vynil'))}}
{{> vynilCustom ctx=. operation='queryResolver'}}
    {{/if}}
    {{#if (or (eq group 'core') (eq resultGroup 'core'))}}
{{> coreCustom ctx=. operation='queryResolver'}}
    {{/if}}
        {{else}}
        metadata {
          name
          namespace
          annotations
          labels
          uid
        }
          {{#each properties}}
        {{this}}
          {{/each}}
        {{/if}}
      }
        {{/unless}}
      {{/each}}
    {{else}}
      getcoreProblem {
        source
        description
      }
      getcoreAdvice {
        source
        description
      }
    {{/if}}
    }
  {{/if}}
{{/each}}
  }
{{#each objects}}
  {{#unless (or namespaced (isNamespace group short))}}
  {{ group }}{{ short }}(params: ${{ group }}In{{ short }}) {
    metadata {
      name
    {{#if ../detailed}}
      annotations
      labels
      creationTimestamp
      ownerReferences {
        apiVersion
        blockOwnerDeletion
        controller
        kind
        name
        uid
      }
      uid
    {{/if}}
    }
    {{#each readProperties}}
    {{this}}
    {{/each}}
    {{#if ../detailed}}
      {{#each resolvers}}
        {{#unless (containShort ../../objects resultShort) }}
      {{name}} {
        metadata {
          name
          namespace
          annotations
          labels
          uid
        }
        {{#each properties}}
        {{this}}
        {{/each}}
      }
        {{/unless}}
      {{/each}}
    {{else}}
    getcoreProblem {
      source
      description
    }
    getcoreAdvice {
      source
      description
    }
    {{/if}}
  }
  {{/unless}}
{{/each}}
}
