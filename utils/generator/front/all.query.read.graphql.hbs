query {{ name }}Query($namespace: queryParameters{{#each objects}}{{#unless (isNamespace group short)}}, ${{ group }}In{{ short }}: queryParameters{{/unless}}{{/each}}) {
  k8sNamespace(params: $namespace) {
    metadata {
      name
{{#each objects}}
  {{#if (and (isNamespace group short) ../detailed)}}
      annotations
      labels
      creationTimestamp
      uid
  {{/if}}
{{/each}}
    }
{{#each objects}}
  {{#if (isNamespace group short)}}
    spec
    status
  {{/if}}
  {{#if namespaced}}
    {{ group }}{{ short }}(params: ${{ group }}In{{ short }}) {
      metadata {
        name
        namespace
    {{#if ../detailed}}
        annotations
        labels
        creationTimestamp
        uid
    {{/if}}
      }
    {{#each readProperties}}
      {{this}}
    {{/each}}
    {{#if ../detailed}}
      {{#each resolvers}}
        {{#unless (containShort ../../objects resultShort) }}
      {{name}} {
        {{#if (or (and (eq group 'vynil') (or (eq resultShort 'Package') (eq resultShort 'Category'))) (eq resultGroup 'core') )}}
          {{#if (eq resultShort 'Package')}}
        name
        commit_id
        description
        consumevynilCategory {
          name
        }
        consumevynilDistrib {
          metadata {
            name
          }
        }
        options
          {{/if}}
          {{#if (eq resultShort 'Category')}}
        name
          {{/if}}
          {{#if (eq resultShort 'Problem')}}
        source
        description
          {{/if}}
          {{#if (eq resultShort 'Advice')}}
        source
        reason
        description
          {{/if}}
          {{#if (eq resultShort 'CrdObject')}}
        metadata {
          name
          namespace
          annotations
          labels
          creationTimestamp
          uid
        }
        spec
        status
          {{/if}}
          {{#if (eq resultShort 'Url')}}
        proto
        host
        path
          {{/if}}
          {{#if (eq resultShort 'Container')}}
        namespace
        pod_name
        name
        init
        spec
        status
        getcoreLog(params: $childcoreContainer) {
          lines
        }
          {{/if}}
          {{#if (eq resultShort 'Event')}}
        metadata {
          name
          namespace
          annotations
          labels
          creationTimestamp
          uid
        }
        source
        involvedObject
        type
        action
        count
        message
        reason
        reportingComponent
        reportingInstance
          {{/if}}
        {{else}}
        metadata {
          name
          namespace
          annotations
          labels
          creationTimestamp
          uid
        }
          {{#each properties}}
        {{this}}
          {{/each}}
        {{/if}}
      }
        {{/unless}}
      {{/each}}
    {{else}}
      getcoreProblem {
        source
        description
      }
      getcoreAdvice {
        source
        description
      }
    {{/if}}
    }
  {{/if}}
{{/each}}
  }
{{#each objects}}
  {{#unless (or namespaced (isNamespace group short))}}
  {{ group }}{{ short }}(params: ${{ group }}In{{ short }}) {
    metadata {
      name
    {{#if ../detailed}}
      annotations
      labels
      creationTimestamp
      uid
    {{/if}}
    }
    {{#each readProperties}}
    {{this}}
    {{/each}}
    {{#if ../detailed}}
      {{#each resolvers}}
        {{#unless (containShort ../../objects resultShort) }}
      {{name}} {
        metadata {
          name
          namespace
          annotations
          labels
          creationTimestamp
          uid
        }
        {{#each properties}}
        {{this}}
        {{/each}}
      }
        {{/unless}}
      {{/each}}
    {{else}}
    getcoreProblem {
      source
      description
    }
    getcoreAdvice {
      source
      description
    }
    {{/if}}
  }
  {{/unless}}
{{/each}}
}
