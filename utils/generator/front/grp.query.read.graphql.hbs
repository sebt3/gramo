query {{ name }}Query($namespace: queryParameters{{#each objects}}{{#unless (isNamespace group short)}}, ${{ short }}: queryParameters{{/unless}}{{/each}}) {
  k8sNamespace(params: $namespace) {
    metadata {
      name
{{#each objects}}
  {{#if (isNamespace group short)}}
      annotations
      labels
      creationTimestamp
      uid
  {{/if}}
{{/each}}
    }
{{#each objects}}
  {{#if (isNamespace group short)}}
    spec
    status
  {{/if}}
  {{#if namespaced}}
    {{ group }}{{ short }}(params: ${{ short }}) {
      metadata {
        name
        namespace
        annotations
        labels
        creationTimestamp
        uid
      }
    {{#each readProperties}}
      {{this}}
    {{/each}}
    {{#if ../detailed}}
      {{#each resolvers}}
        {{#unless (containShort ../../objects resultShort) }}
      {{name}} {
        {{#if (and (eq group 'vynil') (or (eq resultShort 'Package') (eq resultShort 'Category')))}}
          {{#if (eq resultShort 'Package')}}
        name
        commit_id
        description
        providedByCategory {
          name
        }
        providedByDistrib {
          metadata {
            name
          }
        }
        options
          {{else}}
        name
          {{/if}}
        {{else}}
        metadata {
          name
          namespace
          annotations
          labels
          creationTimestamp
          uid
        }
          {{#each properties}}
        {{this}}
          {{/each}}
        {{/if}}
      }
        {{/unless}}
      {{/each}}
    {{/if}}
    }
  {{/if}}
{{/each}}
  }
{{#each objects}}
  {{#unless (or namespaced (isNamespace group short))}}
  {{ group }}{{ short }}(params: ${{ short }}) {
    metadata {
      name
      annotations
      labels
      creationTimestamp
      uid
    }
    {{#each readProperties}}
    {{this}}
    {{/each}}
    {{#if ../detailed}}
      {{#each resolvers}}
        {{#unless (containShort ../../objects resultShort) }}
      {{name}} {
        metadata {
          name
          namespace
          annotations
          labels
          creationTimestamp
          uid
        }
        {{#each properties}}
        {{this}}
        {{/each}}
      }
        {{/unless}}
      {{/each}}
    {{/if}}
  }
  {{/unless}}
{{/each}}
}
