query {{ group }}{{ short }}Query($obj: queryParameters{{#if detailed}}{{#each resolvers}}, ${{name}}: queryParameters{{/each}}{{/if}}) {
{{/if}}
    {{ group }}{{ short }}(params: $obj) {
      metadata {
        name
