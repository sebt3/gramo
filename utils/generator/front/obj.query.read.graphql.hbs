            name
          }
        }
        options
      {{/if}}
      {{#if (eq resultShort 'Category')}}
        name
      {{/if}}
      {{#if (eq resultShort 'Url')}}
        proto
        host
        path
      {{/if}}
    {{else}}
        metadata {
          name
          namespace
          annotations
          labels
          creationTimestamp
          uid
        }
      {{#if (and (or (eq short 'Install') (eq short 'Kustomize')) (eq resultShort 'Ingress'))}}
        userscoreUrl {
          proto
          host
          path
        }
      {{/if}}
      {{#each properties}}
        {{this}}
      {{/each}}
    {{/if}}
      }
